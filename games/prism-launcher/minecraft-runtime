#!/bin/sh

export JAVA_HOME=/usr/local/openjdk17

# You shouldn't need to change anything below this line

LWJGL_JLP_OVRD="/usr/local/lib/lwjgl3:/usr/local/lib:/usr/lib"

JCLS="/usr/local/share/java/classes/lwjgl3"
LWJGL_OVRD="${JCLS}/lwjgl.jar"
LWJGL_OGL_OVRD="${JCLS}/lwjgl-opengl.jar"
LWJGL_OAL_OVRD="${JCLS}/lwjgl-openal.jar"
LWJGL_GLFW_OVRD="${JCLS}/lwjgl-glfw.jar"
LWJGL_STB_OVRD="${JCLS}/lwjgl-stb.jar"
LWJGL_JEM_OVRD="${JCLS}/lwjgl-jemalloc.jar"

echo CMD IN: ${@}

build_classpath() {
    echo build_classpath called with $@
    local IFS=":"
    for p in ${1}
    do
        case "${p}" in
            *lwjgl-3.*.jar)
		echo set $p = ${LWJGL_OVRD}
		cp="${cp}:${LWJGL_OVRD}"
		;;
	    *lwjgl-opengl*)
		echo set $p = ${LWJGL_OGL_OVRD}
		cp="${cp}:${LWJGL_OGL_OVRD}"
		;;
	    *lwjgl-openal*)
		echo set $p = ${LWJGL_OAL_OVRD}
		cp="${cp}:${LWJGL_OAL_OVRD}"
		;;
	    *lwjgl-glfw*)
		echo set $p = ${LWJGL_GLFW_OVRD}
		cp="${cp}:${LWJGL_GLFW_OVRD}"
		;;
	    *lwjgl-stb*)
		echo set $p = ${LWJGL_STB_OVRD}
		cp="${cp}:${LWJGL_STB_OVRD}"
		;;
	    *lwjgl-jemalloc*)
		echo set $p = ${LWJGL_JEM_OVRD}
		cp="${cp}:${LWJGL_JEM_OVRD}"
		;;
            *)
		cp="${cp}:${p}"
		;;
        esac
    done
    cp=${cp#?}
}

for var in "${@}"
do
    echo for var ${var}
    case "${var}" in
    -Djava.library*)
	echo set library path
        args="${args} -Djava.library.path=${LWJGL_JLP_OVRD}"
        ;;
    *lwjgl-opengl*)
        build_classpath "${var}"
        args="${args} ${cp}"
        ;;
    *)
        args="${args} ${var}"
        ;;
    esac
done

echo CMD OUT: ${args}

${JAVA_HOME}/bin/java ${args}
